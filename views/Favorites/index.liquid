{% layout 'layout.liquid' %}
{% block content %}
<h1>Hi</h1>
<div>
    <h2 class="display-6">All Favorites</h2>
    <div class="row">
      {% if favorites.length == 0 %}
      <h3>No Saved Items</h3>
      {%else%}
      {% for favorites in favorites %}
        
        <div class="card" style="width: 18rem;">
          <h5 class="card-header">{{ favorites.title }}</h5>
          <div class="card-body">
            <h5 class="card-title">
              Title: {{ favorites.title }}
            </h5>
            <p class="card-text">
              Artist: {{ favorites.manufacturer }}
            </p>
            <p class="card-text">
              Album: {{ favorites.name }}
            </p>
              <form action="/favorites/{{ favorites.id }}?_method=DELETE" method="POST">
          
              <input
                type="submit"
                class="btn btn-danger"
                value="DELETE {{ favorite.name}}">
            </form>
              


          </div>
        </div>
      {% endfor %}
      {%endif%}
    </div>
</div>
{% endblock %}