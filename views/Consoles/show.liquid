{% layout 'layout.liquid' %}
{% block content %}
<div class="container-md">
    <article>
        <h2>
            {{ console.title }} -
            {% if console.ready %}
            Ready
            {% else %}
            Not Ready
            {%endif%}
        </h2>
        <h3>Release Year: {{ console.amount }}</h3>
        <h6>Manufacturer: {{ console.body }}</h6>
        {% if console.owner == userId %}
        <div class="btn-group">

            <a href="/consoles/{{ console.id }}/edit" class="btn btn-primary">Edit</a>
            <form action="/consoles/{{ console.id }}?_method=DELETE" method="POST">
                <input type="submit" value="Delete" class="btn btn-danger">
            </form>
        </div>
        {% endif %}
    </article>
</div>
{% endblock %}